generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feature {
  id          String   @id @default(cuid())
  title       String
  description String?
  effort      String
  priority    String
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EffortConfig {
  id         String   @id @default(cuid())
  effortSize String   @unique
  days       Float
  costPerDay Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}